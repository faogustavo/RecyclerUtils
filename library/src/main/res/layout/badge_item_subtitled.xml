<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/image"
        android:visibility="gone"
        android:layout_width="@dimen/defaultImageSize"
        android:layout_height="@dimen/defaultImageSize"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="@dimen/defaultTitleSize"
        android:textColor="@color/colorTextList"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/badgeContainer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="@dimen/defaultSubtitleSize"
        android:textColor="@color/colorTextList"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_toLeftOf="@+id/badgeContainer"
        android:layout_toStartOf="@+id/badgeContainer" />

    <RelativeLayout
        android:id="@+id/badgeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="4dp">
        <TextView
            android:id="@+id/badgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/defaultBadgeSize"
            android:text="15+"
            android:maxLength="6"/>
    </RelativeLayout>

</RelativeLayout>